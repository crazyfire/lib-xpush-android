<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="GalaxyZooThemeToolbarDarkOverflow" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="GrayButton">
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/btn_big_gray</item>
        <item name="android:paddingLeft">25.0dip</item>
        <item name="android:paddingRight">25.0dip</item>
        <item name="android:layout_height">50.0dip</item>
    </style>

    <style name="Layout" />
    <style name="D4" />
    <style name="D4.Widget" parent="@style/D4" />

    <style name="D4.Widget.SettingItemTextView" parent="@style/D4.Widget">
        <item name="android:textSize">@dimen/font_level_4</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/font_gray4</item>
    </style>

    <style name="D4.Layout.SettingItemLayout" parent="@style/Layout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/settings_list_item_bg</item>
        <item name="android:paddingTop">16.0dip</item>
        <item name="android:paddingBottom">16.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">14.0dip</item>
        <item name="android:paddingEnd">14.0dip</item>
    </style>

    <style name="D4.Layout.SettingSimpleTextInputLayout" parent="@style/Layout">
        <item name="android:background">@color/background_4</item>
        <item name="android:paddingTop">26.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingStart">22.0dip</item>
        <item name="android:paddingEnd">22.0dip</item>
    </style>

    <style name="Layout.WindowLayout" parent="@style/Layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
    </style>

    <style name="D4.Widget.EditTextWithClearButton" parent="@style/D4.Widget">
        <item name="android:background">@drawable/sign_inputbox</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:paddingBottom">8.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">46.0dip</item>
        <item name="android:paddingStart">8.0dip</item>
        <item name="android:paddingEnd">8.0dip</item>
    </style>

    <style name="Widget.FormSmallLabelView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/font_level_2</item>
        <item name="android:textColor">@color/font_khaki</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>
</resources>
