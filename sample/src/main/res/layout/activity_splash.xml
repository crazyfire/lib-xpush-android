<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    tools:context=".SplashActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/helloImage"
            android:layout_width="fill_parent" android:layout_height="fill_parent"  fresco:fadeDuration="300" fresco:actualImageScaleType="focusCrop"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/splash" />

        <!-- TextViewsplash.png
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:padding="50dp"
            android:text="��븳誘쇨뎅 二쇱슂 �좊Ц �ъ꽕 蹂닿린"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff2f2f2" / -->


        <com.github.rahatarmanahmed.cpv.CircularProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progressBar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            app:cpv_color="@color/white"
            app:cpv_animAutostart="true"
            app:cpv_indeterminate="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reload"
            android:id="@+id/reloadBtn"
            android:layout_below="@id/imageView"
            android:visibility="invisible"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


</RelativeLayout>
